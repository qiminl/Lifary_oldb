<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.liuqimin.lifary.UserProfileActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/light_color">

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "username"
        android:id = "@+id/usernameProfileText"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity = "center"
        android:gravity = "center"
        android:id="@+id/QRcodeImg"
        android:src = "@drawable/qrcode"
        android:scaleType="fitStart"
        android:layout_marginTop="10dp"
        android:layout_weight="1" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="New Diary"
        android:id="@+id/newDiaryButton"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Add Frient"
        android:id="@+id/addFriendButton"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "username"
        android:id = "@+id/friendText"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

</LinearLayout>
